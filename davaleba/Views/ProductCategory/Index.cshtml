@model IEnumerable<davaleba.Models.Products_Categories>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Categories.Name) (Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name) (Product)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Categories.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-md" })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>